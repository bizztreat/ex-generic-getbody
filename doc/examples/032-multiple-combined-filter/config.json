{
    "parameters": {
        "api": {
            "baseUrl": "http://mock-server:80/029-simple-filter/"
        },
        "config": {
            "debug": true,
            "outputBucket": "mock-server",
            "jobs": [
                {
                    "endpoint": "users",
                    "children": [
                        {
                            "endpoint": "user/{user-id}",
                            "dataField": ".",
                            "dataType": "user-detail",
                            "recursionFilter": "role==parent|id>300&id<400",
                            "placeholders": {
                                "user-id": "id"
                            }
                        }
                    ]
                }
            ]
        }
    }
}
